# Fibonacci as a recursive function
def fib(n):
    if n < 1:
        return 1
    return fib(n - 1) + fib(n - 2)
  

# Golden ratio
def golden_ratio(n):
    return fib(n) / (fib(n - 2) * 1.0)

# divide by the Golden ratio
def divide(total):
    gr = golden_ratio(5)
    part1 = total / gr
    part2 = total - part1
    return part1, part2
    
