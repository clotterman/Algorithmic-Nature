size(600, 600)
background(0.1)

# Fibonacci as a recursive function
def fib(n):
    if n < 3:
        return 1
    return fib(n - 1) + fib(n - 2)

stroke(1)
strokewidth(0)
fill(.3, 0.0, 0.4)
x = 0
y = 0
for i in range(12, 0, -1):
    s = fib(i)
    rx= random(WIDTH)
    ry= random(HEIGHT)
    fill("#300", "white")
    rotate(10)
    poly(x + rx, y + ry, s,sides=6) 